<?xml version="1.0"?>
<!--
/**
 * Nuvei Checkout adminhtml system config.
 *
 * @category Nuvei
 * @package  Nuvei_Checkout
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="nuvei"
                   translate="label"
                   type="text"
                   sortOrder="40"
                   showInDefault="1"
                   showInWebsite="1"
                   showInStore="1">
                <label>Nuvei</label>
                
				<group id="basic_configuration"
                       translate="label"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1"
                       sortOrder="10">
                    <label>Basic Configuration</label>
				
					<field id="active"
						   translate="label"
						   type="select"
						   sortOrder="10"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Enabled</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/nuvei/active</config_path>
					</field>

					<field id="title"
						   translate="label"
						   type="text"
						   sortOrder="20"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0"
						   canRestore="1" >
						<label>Title</label>
						<config_path>payment/nuvei/title</config_path>
					</field>

					<field id="payment_action"
						   translate="label"
						   type="select"
						   sortOrder="30"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Payment Action</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\PaymentAction</source_model>
						<config_path>payment/nuvei/payment_action</config_path>
						<validate>required-entry</validate>
					</field>

					<field id="mode"
						   translate="label"
						   type="select"
						   sortOrder="40"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Mode</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\Mode</source_model>
						<config_path>payment/nuvei/mode</config_path>
						<validate>required-entry</validate>
					</field>

					<field id="hash"
						   translate="label"
						   type="select"
						   sortOrder="50"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Merchant Hash</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\Hash</source_model>
						<config_path>payment/nuvei/hash</config_path>
						<validate>required-entry</validate>
					</field>
					
					<field id="merchant_id"
						   translate="label"
						   type="obscure"
						   sortOrder="60"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Merchant ID</label>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<comment>Value provided by Nuvei.</comment>
						<config_path>payment/nuvei/merchant_id</config_path>
					</field>

					<field id="merchant_site_id"
						   translate="label"
						   type="text"
						   sortOrder="70"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Merchant Site Id</label>
						<comment>Value provided by Nuvei.</comment>
						<config_path>payment/nuvei/merchant_site_id</config_path>
					</field>

					<field id="merchant_secret_key"
						   translate="label"
						   type="obscure"
						   sortOrder="80"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Merchant Secret Key</label>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<comment>Value provided by Nuvei.</comment>
						<config_path>payment/nuvei/merchant_secret_key</config_path>
					</field>
					
					<field id="sandbox_merchant_id"
						   translate="label"
						   type="obscure"
						   sortOrder="90"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Sandbox Merchant ID</label>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<comment>Value provided by Nuvei.</comment>
						<config_path>payment/nuvei/sandbox_merchant_id</config_path>
					</field>

					<field id="sandbox_merchant_site_id"
						   translate="label"
						   type="text"
						   sortOrder="100"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Sandbox Merchant Site Id</label>
						<comment>Value provided by Nuvei.</comment>
						<config_path>payment/nuvei/sandbox_merchant_site_id</config_path>
					</field>

					<field id="sandbox_merchant_secret_key"
						   translate="label"
						   type="obscure"
						   sortOrder="110"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Sandbox Merchant Secret Key</label>
						<backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
						<comment>Value provided by Nuvei.</comment>
						<config_path>payment/nuvei/sandbox_merchant_secret_key</config_path>
					</field>
					
					<field id="apple_pay_label"
						   translate="label"
						   type="text"
						   sortOrder="120"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Apple Pay Label</label>
					</field>
					
					<field id="debug"
						   translate="label"
						   type="select"
						   sortOrder="130"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Save Debug log</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\Debug</source_model>
						<config_path>payment/nuvei/debug</config_path>
					</field>

					<field id="min_order_total"
						   translate="label"
						   type="text"
						   sortOrder="140"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Minimum Order Total</label>
						<config_path>payment/nuvei/min_order_total</config_path>
					</field>

					<field id="max_order_total"
						   translate="label"
						   type="text"
						   sortOrder="150"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Maximum Order Total</label>
						<config_path>payment/nuvei/max_order_total</config_path>
					</field>
					
					<field id="sort_order"
						   translate="label"
						   type="text"
						   sortOrder="160"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Sort Order</label>
						<frontend_class>validate-number</frontend_class>
						<config_path>payment/nuvei/sort_order</config_path>
					</field>
				</group>
				
				<group id="advanced_configuration"
                       translate="label"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="1"
                       sortOrder="20">
					<label>Advanced Configuration</label>
					
					<field id="allowspecific"
						   translate="label"
						   type="allowspecific"
						   sortOrder="10"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0"
						   canRestore="1">
						<label>Payment from Applicable Countries</label>
						<source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
						<config_path>payment/nuvei/allowspecific</config_path>
					</field>

					<field id="specificcountry"
						   translate="label"
						   type="multiselect"
						   sortOrder="20"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Payment from Specific Countries</label>
						<source_model>Magento\Directory\Model\Config\Source\Country</source_model>
						<config_path>payment/nuvei/specificcountry</config_path>
					</field>
                    
                    <field id="use_dev_sdk"
						   translate="label"
						   type="select"
						   sortOrder="25"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Use Dev SDK version</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/nuvei/use_dev_sdk</config_path>
					</field>
					
					<field id="use_dcc"
						   translate="label"
						   type="select"
						   sortOrder="30"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Use currency conversion</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\UseDcc</source_model>
						<config_path>payment/nuvei/use_dcc</config_path>
					</field>
					
					<field id="block_cards"
						   translate="label"
						   type="text"
						   sortOrder="40"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Block Cards</label>
						<comment model="Nuvei\Checkout\Block\System\Config\BlockCardsComment" />
					</field>
					
					<field id="block_pms"
						   translate="label"
						   type="multiselect"
						   sortOrder="50"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Block Payment methods</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\GetMerchantPaymentMethods</source_model>
					</field>
					
					<field id="use_upos"
						   translate="label"
						   type="select"
						   sortOrder="60"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Use UPOs</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/nuvei/use_upos</config_path>
					</field>
					
					<field id="pay_btn_text"
						   translate="label"
						   type="select"
						   sortOrder="70"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Choose the Text on the Pay button</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\PayButtonText</source_model>
						<config_path>payment/nuvei/pay_btn_text</config_path>
					</field>
					
					<field id="auto_expand_pms"
						   translate="label"
						   type="select"
						   sortOrder="80"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Auto expand PMs</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/nuvei/auto_expand_pms</config_path>
					</field>
                    
					<field id="auto_close_popup"
						   translate="label"
						   type="select"
						   sortOrder="85"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Auto close APM popup</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/nuvei/auto_close_popup</config_path>
					</field>
					
					<field id="checkout_log_level"
						   translate="label"
						   type="select"
						   sortOrder="90"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Checkout Log level</label>
						<source_model>Nuvei\Checkout\Model\Adminhtml\Source\CheckoutLogLevel</source_model>
						<config_path>payment/nuvei/checkout_log_level</config_path>
					</field>
					
					
					<field id="checkout_transl"
						   translate="label"
						   type="textarea"
						   sortOrder="100"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0">
						<label>Checkout translations</label>
						<comment model="Nuvei\Checkout\Block\System\Config\CheckoutTranslateComment" />
					</field>
					
<!--					<field id="allow_guests_subscr"
						   translate="label"
						   type="select"
						   sortOrder="110"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" 
						   canRestore="1">
						<label>Allow Subscriptions for Guests</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/nuvei/allow_guests_subscr</config_path>
					</field>-->
					
                    <field id="show_checkout_logo"
                            translate="label"
                            type="select"
                            sortOrder="110"
                            showInDefault="1"
                            showInWebsite="1"
                            showInStore="0">
                         <label>Show checkout logo</label>
                         <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                     </field>
                    
					<field id="notifyURL"
						   translate="label"
						   type="label"
						   sortOrder="120"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Site Notify URL</label>
						<comment model="Nuvei\Checkout\Block\System\Config\GetNotifyUrl" />
					</field>

					<field id="getPlans"
						   translate="label"
						   type="button"
						   sortOrder="130"
						   showInDefault="1"
						   showInWebsite="1"
						   showInStore="0" >
						<label>Get Payment Plans</label>
						<frontend_model>Nuvei\Checkout\Block\System\Config\Button</frontend_model>
						<comment model="Nuvei\Checkout\Block\System\Config\ShowLastDownloadTime" />
					</field>
				</group>
					
<!--				<field id="save_order_before_success"
					   translate="label"
					   type="select"
					   sortOrder="105"
					   showInDefault="1"
					   showInWebsite="1"
					   showInStore="0"
					   canRestore="1">
					<label>Save Order before Success page</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<config_path>payment/nuvei/save_order_before_success</config_path>
				</field>-->
            </group>
        </section>
    </system>
</config>
